{
    "name": "quick-bunny",
    "displayName": "QuickBunny",
    "description": "Jump quickly between section markers in the code.",
    "version": "0.2.0",
    "publisher": "BrunoEgito",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "quickBunny-sidebar",
                    "title": "QuickBunny",
                    "icon": "images/quick-bunny-container.svg"
                }
            ]
        },
        "views": {
            "quickBunny-sidebar": [
                {
                    "id": "quickBunnyView",
                    "name": "%quickBunny.view.title%",
                    "icon": "images/icon.png",
                    "when": "config.quickBunny.showExplorerView == true"
                }
            ]
        },
        "configuration": {
            "title": "QuickBunny",
            "properties": {
                "quickBunny.tags": {
                    "type": "array",
                    "default": [
                        "TODO",
                        "FIXME",
                        "NOTE",
                        "BUG",
                        "HACK",
                        "SECTION",
                        "MARK",
                        "REVIEW"
                    ],
                    "description": "%quickBunny.config.tags%"
                },
                "quickBunny.showExplorerView": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show the QuickBunny view"
                },
                "quickBunny.decorations.showHeaders": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show the divider line above MARK/SECTION"
                },
                "quickBunny.decorations.showBackgrounds": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show background color for TODO/FIXME badges"
                }
            }
        },
        "commands": [
            {
                "command": "quickBunny.jump",
                "title": "%quickBunny.cmd.jump%"
            },
            {
                "command": "quickBunny.refresh",
                "title": "%quickBunny.cmd.refresh%",
                "icon": "$(refresh)"
            },
            {
                "command": "quickBunny.reveal",
                "title": "QuickBunny: Reveal Mark"
            },
            {
                "command": "quickBunny.next",
                "title": "QuickBunny: Go to Next Mark"
            },
            {
                "command": "quickBunny.previous",
                "title": "QuickBunny: Go to Previous Mark"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "quickBunny.refresh",
                    "when": "view == quickBunnyView",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "quickBunny.jump",
                "key": "ctrl+alt+j",
                "mac": "cmd+alt+j",
                "when": "editorTextFocus"
            },
            {
                "command": "quickBunny.next",
                "key": "ctrl+alt+n",
                "mac": "cmd+alt+n",
                "when": "editorTextFocus"
            },
            {
                "command": "quickBunny.previous",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    }
}
